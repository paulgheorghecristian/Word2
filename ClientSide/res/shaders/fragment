#version 330 core

uniform vec4 color_vector;
uniform sampler2D texture_sampler;
uniform int has_texture;

in vec2 text_coords;
out vec4 out_color;

void main(){
	if(has_texture == 1){
		vec4 color = texture(texture_sampler, text_coords);
		out_color = color;
	}else{
		out_color = color_vector;
	}
}
